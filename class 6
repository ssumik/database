SELECT 
    EMP.FIRST_NAME,
	EMP.SALARY,
	DEP.DEPARTMENT_NAME
FROM 
		HR.DEPARTMENTS DEP
	INNER JOIN HR.EMPLOYEES EMP
	ON DEP.DEPARTMENT_ID = EMP.EMPLOYEE_ID
ORDER BY
	DEP.DEPARTMENT_NAME;

SELECT 
    DEP.LOCATION_ID, LOC.CITY 
FROM HR.DEPARTMENTS DEP
INNER JOIN HR.LOCATIONS LOC
ON LOC.LOCATION_ID = DEP.LOCATION_ID;

SELECT
    C.COUNTRY_NAME,
    R.REGION_NAME
FROM 
    HR.COUNTRIES C
INNER JOIN 
    HR.REGIONS R
ON 
    C.REGION_ID = R.REGION_ID
ORDER BY R.REGION_NAME;

SELECT
    CONCAT(CONCAT(EMP.FIRST_NAME,' '),EMP.LAST_NAME) FULL_NAME,
    DEP.DEPARTMENT_NAME,
    EMP.SALARY,
    JBS.JOB_TITLE,
    LOC.STREET_ADDRESS,
    LOC.CITY
FROM HR.REGIONS REG
INNER JOIN HR.COUNTRIES CON
    ON REG.REGION_ID = CON.REGION_ID
INNER JOIN HR.LOCATIONS LOC
    ON LOC.COUNTRY_ID = CON.COUNTRY_ID
INNER JOIN HR.DEPARTMENTS DEP
    ON LOC.LOCATION_ID = DEP.LOCATION_ID
INNER JOIN HR.EMPLOYEES EMP
    ON EMP.DEPARTMENT_ID = DEP.DEPARTMENT_ID
INNER JOIN HR.JOBS JBS
    ON EMP.JOB_ID = JBS.JOB_ID
WHERE REG.REGION_NAME = 'Europe';
